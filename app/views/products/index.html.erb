<div class="container-fluid">
  <div class="container">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3 text-center">
        <ul>
        <% @products.each do |product| %>
          <li><%= link_to product.name, product_path(product) %> $ <%= product.price %></li>
        <% end %>
        </ul>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3 text-center">
        <%= link_to " + Add new products", new_product_path %>
      </div>
    </div>
  </div>
</div>


